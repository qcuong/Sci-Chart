<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <!--  Annotations over the chart series  -->
    <com.scichart.charting.visuals.annotations.AnnotationSurface
        android:id="@+id/annotationSurface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="true"/>

    <!--  Modifier canvas, e.g. rubber band rectangles, rollover  -->
    <com.scichart.charting.visuals.ChartModifierSurface
        android:id="@+id/chartModifierSurface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="true"/>

    <com.scichart.charting.visuals.RenderableSeriesArea
        android:id="@+id/renderableSeriesArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="true" />

    <com.scichart.charting.visuals.layout.LayoutableViewGroup
        android:id="@+id/axisModifierSurfaceArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false" />

    <!-- adorners, e.g. annotation resize -->
    <com.scichart.charting.visuals.annotations.AdornerLayer
        android:id="@+id/adornerLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</merge>
